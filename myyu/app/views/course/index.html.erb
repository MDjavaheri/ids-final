<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@course) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title%>

      <%= f.label :department%>
      <%= f.text_field :department %>

      <%= f.label :course_number %>
      <%= f.text_field :course_number %>

      <%= f.label :professor_last_name %>
      <%= f.text_field :professor_last_name %>

      <%= f.label :section %>
      <%= f.text_field :section%>

      <%= f.label :semester %>
      <%= f.integer_field :semester %>

      <%= f.submit "Search for a course offering", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>